.viewport {
    overflow: auto;
    width: 650px;
    height: 300px;
}
.table {
    width: 100%;
    position: relative;
    background-color: #f1f1f2;
    border-collapse: collapse;
}

.table > thead > tr > th {
    position: sticky;
    top: 0;
    height: 30px;
    font-weight: 400;
    color: #fff;
    background-color: blue;
    border: 1px solid rgba(0, 0, 0, 0.12);
}

.table > tbody > tr > td {
    text-align: center;
    height: 20px;
	border: 1px solid #ddd;
}